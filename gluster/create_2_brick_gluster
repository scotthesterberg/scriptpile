for i in isos rhev-exports vmstore; do mkdir /gluster/$i ; gluster volume create $i stripe 2 transport tcp 10.0.139.11:/gluster/$i/ 10.0.139.12:/gluster/$i/ ; gluster volume start $i; gluster volume reset all; gluster volume set $i group virt; gluster volume set $i storage.owner-uid 36 ; gluster volume set $i storage.owner-gid 36 ; gluster volume set $i nfs.disable off ; gluster volume set $i performance.cache-size 4GB ; gluster volume set $i cluster.stripe-coalesce on ; gluster volume set $i cluster.server-quorum-type server ; gluster volume set $i quorum-type auto; done
